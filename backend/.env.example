# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY

# Smart Contract Addresses (auto-populated after deployment)
CONTRACT_SKILLTOKEN=
CONTRACT_TALENTPOOL=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/talentchainpro
DATABASE_ECHO=false

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# AI/ML Services
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
OPENAI_API_KEY=your_openai_key_if_using_openai

# MCP Server Configuration
MCP_SERVER_URL=ws://localhost:3001/ws
MCP_TIMEOUT=30

# External Services
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Monitoring & Analytics
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Hedera Mirror Node
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com
HEDERA_MIRROR_NODE_API_KEY=

# Development Settings
DEVELOPMENT_MODE=true
DEBUG_MODE=false
MOCK_HEDERA=false

# Performance Settings
CACHE_TTL=300
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=65

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "application/pdf", "text/plain"]
UPLOAD_DIRECTORY=./uploads

# Email Configuration (if needed)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@talentchainpro.io

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_talentchainpro
TEST_HEDERA_ACCOUNT_ID=0.0.TEST_ACCOUNT
TEST_HEDERA_PRIVATE_KEY=test_private_key