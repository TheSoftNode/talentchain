# Application Settings
APP_NAME=TalentChain Pro API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
DEVELOPMENT_MODE=true

# API Settings
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/talentchainpro
SQLITE_DATABASE_URL=sqlite:///./talentchainpro.db
DATABASE_AUTO_FALLBACK=true
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Hedera Blockchain Settings
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY
HEDERA_PUBLIC_KEY=YOUR_PUBLIC_KEY
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Smart Contract Addresses (Hedera Format: 0.0.XXXXXXX)
CONTRACT_SKILL_TOKEN=0.0.6545000
CONTRACT_TALENT_POOL=0.0.6545001
CONTRACT_GOVERNANCE=0.0.6545002
CONTRACT_REPUTATION_ORACLE=0.0.6545003

# Contract ABI Path
CONTRACT_ABI_PATH=./contracts/abis

# AI/ML Services
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
OPENAI_API_KEY=your_openai_key_if_using_openai

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3001
MCP_SERVER_URL=ws://localhost:3001/ws
MCP_TIMEOUT=30

# External APIs
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=
ENABLE_METRICS=true

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Cache Settings
CACHE_TTL=300
CACHE_TTL_SKILL_TOKENS=600
CACHE_TTL_POOLS=180
CACHE_TTL_REPUTATION=900

# Performance Settings
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=65

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# Email Configuration
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@talentchainpro.io

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_talentchainpro
TEST_HEDERA_ACCOUNT_ID=0.0.TEST_ACCOUNT
TEST_HEDERA_PRIVATE_KEY=test_private_key
